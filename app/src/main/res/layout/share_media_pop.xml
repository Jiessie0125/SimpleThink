<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/popupWindow"
        android:visibility="visible"
        android:id="@+id/share_popup"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="50dp">
                <ImageView
                    android:id="@+id/share0"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/share1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/share2"
                    android:layout_marginRight="10dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/share3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">
                <TextView
                    android:id="@+id/shareText0"
                    android:textAlignment="center"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordWhite"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/shareText1"
                    android:textAlignment="center"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordWhite"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/shareText2"
                    android:textAlignment="center"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordWhite"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/shareText3"
                    android:textAlignment="center"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordWhite"
                    android:visibility="gone"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/share4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">
                <TextView
                    android:id="@+id/shareText4"
                    android:textAlignment="center"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordWhite"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/share_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/wordWhite"
            android:text="@string/ssdk_oks_cancel"
            />
    </RelativeLayout>
</RelativeLayout>
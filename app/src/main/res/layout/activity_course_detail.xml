<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/content_bk"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="225dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:alpha="0.5"
            android:background="@color/wordBlack"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/couseTitle"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <LinearLayout
                    android:id="@+id/title_tool_back_all"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                   android:gravity="center">
                <ImageView
                    android:id="@+id/course_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/default_view_horizontal_padding"
                    android:src="@drawable/back" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/course_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/default_view_horizontal_padding"
                    android:src="@drawable/share_media" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/couseTitle"
                android:id="@+id/couseName"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/course_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordWhite"
                    android:textSize="@dimen/hello_text_size"/>
                <ImageView
                    android:id="@+id/course_vip_img"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:src="@drawable/an_crown"/>
            </LinearLayout>
            <TextView
                android:id="@+id/content_detail"
                android:layout_below="@+id/couseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/scene_detail_image_txt"
                android:gravity="center_horizontal"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/courseDetail"/>
            <Button
                android:id="@+id/download_all_course"
                android:layout_below="@+id/couseTitle"
                android:layout_marginTop="120dp"
                android:layout_width="265dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="@string/download_class_list"
                android:textSize="@dimen/login_small_title"
                android:background="@drawable/button_circle_shape2"/>
            <LinearLayout
                android:layout_marginTop="36dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/download_all_course"
                android:layout_marginBottom="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_circle_shape" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/class_list"
                    android:textColor="@color/wordWhite"
                    android:textSize="@dimen/login_small_title" />
                <TextView
                    android:id="@+id/course_detail_totle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/wordWhite"
                    android:textSize="@dimen/login_small_title"/>
            </LinearLayout>
        </RelativeLayout>


    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/course_detail_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:id="@+id/ad_popup_course"
        >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/ad_popup_pic_course"
        >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:id="@+id/media_popup"
        >
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/mainColor"
    tools:context=".main.UserInfoActivity.UserInfoActivity">
    <include android:id="@+id/registerTitle"
        layout="@layout/title_tool"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:minHeight="70dp"
        android:layout_marginLeft="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/avatar"
            android:layout_centerVertical="true"
            android:textColor="@color/wordWhite"
            android:textSize="15sp">
        </TextView>
        <com.example.simple.simplethink.vip.CircleImageView
            android:id="@+id/user_info_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blackItemLine" />
    <RelativeLayout
        android:id="@+id/update_nick_name"
        android:orientation="horizontal"
        android:minHeight="50dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="@string/nick_name"
            android:textColor="@color/wordWhite"
            android:textSize="15sp">
        </TextView>
        <TextView
            android:id="@+id/update_nick_name_text"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/edit_text"
            android:minHeight="30dp"
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_white"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blackItemLine" />
    <RelativeLayout
        android:id="@+id/userinfo_phoneno"
        android:minHeight="50dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="@string/phone_number_1"
            android:textColor="@color/wordWhite"
            android:textSize="15sp">
        </TextView>

        <TextView
            android:id="@+id/update_phone_number"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/edit_text"
            android:minHeight="30dp"
            android:gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:id="@+id/phoneno_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:visibility="gone"
        android:background="@color/blackItemLine" />
    <RelativeLayout
        android:id="@+id/enter_vip_center"
        android:minHeight="50dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="@string/vip_center"
            android:textColor="@color/wordWhite"
            android:textSize="15sp">
        </TextView>
        <TextView
            android:id="@+id/update_vip_date"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/edit_text"
            android:minHeight="30dp"
            android:gravity="center_vertical"
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_white"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blackItemLine" />

    <RelativeLayout
        android:id="@+id/update_password"
        android:minHeight="50dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:text="@string/update_password"
            android:textColor="@color/wordWhite"
            android:textSize="15sp">
        </TextView>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_white"/>
    </RelativeLayout>

</LinearLayout>

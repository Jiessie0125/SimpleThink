<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="55dp"
    android:id="@+id/course_detail_item"
    android:background="@color/mainColor"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/recycle_vip_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/recycle_course_img"
        android:textSize="@dimen/login_small_title"
        android:textColor="@color/wordWhite"/>
    <TextView
        android:id="@+id/recycle_vip_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/hello_text_size"
        android:textColor="@color/fisrtUse"
        android:layout_centerInParent="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/course_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_circle_yellow_shape"
        android:layout_alignParentRight="true"
        android:text="@string/renew"
        android:textSize="@dimen/login_small_title"
        android:textColor="@color/wordWhite"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/mainColor"
    tools:context=".login.LoginActivity">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/login_phone_back_btn"
            android:layout_marginTop="39dp"
            android:layout_marginLeft="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logon"
            android:textColor="@color/wordWhite"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/login_phone_back_btn"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_marginTop="20dp"
        android:background="@color/blackItemLine" />
    <LinearLayout
        android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:text="@string/phone_number"
        android:textColor="@color/wordWhite"
        android:textSize="15sp">
    </TextView>
        <View
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/divide_line_vertical" />
        <EditText
            android:id="@+id/login_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="15594807003"
            android:maxLength="11"
            android:textColor="@color/wordWhite"
            android:background="@null"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:text="@string/enter_password"
            android:textColor="@color/wordWhite"
            android:textSize="15sp">
        </TextView>
        <View
            android:layout_marginTop="3dp"
            android:layout_marginLeft="20dp"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/divide_line_vertical" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/login_phone_number_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="111111231223"
            android:maxLength="13"
            android:textColor="@color/wordWhite"
            android:background="@null"/>
    </LinearLayout>
    <Button
        android:id="@+id/login_phone_btn"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_circle_shape2"
        android:textColor="@color/guideBtn"
        android:textSize="15dp"
        android:text="@string/logon" />
        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            android:textColor="@color/blackSuggesstion" />

</LinearLayout>